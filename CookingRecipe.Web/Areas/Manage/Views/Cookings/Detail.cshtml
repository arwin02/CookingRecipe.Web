@model CookingRecipe.Web.Infrastructures.Domain.Models.Cooking
@{
    Layout = "~/areas/manage/views/shared/_manageLayout.cshtml";
}


<div class="section-title text-center">
    <h1 class="text-info">Cooking Details</h1>
    <p></p>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="section-title">
                <h3>Food Dish</h3>
                <p></p>
            </div>
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        Name :
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Name
                    </dd>

                </dl>
            </div>
        </div>


    </div>
</div>


@if (Model.Ingredients != null)
{

    if (Model.Ingredients.Count > 0)
    {
        <hr class="h-75" />
        <div class="section-title">
            <h3>Ingredients List</h3>
            <p></p>
        </div>
        <table class="table table-borderless table-striped table-earning">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Unit Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingredient in Model.Ingredients)
                {
                    <tr>
                        <td>@ingredient.Name</td>
                        <td>@ingredient.Quantity</td>
                        <td>@ingredient.UnitCost.ToString("F")</td>

                    </tr>
                }

            </tbody>

        </table>

    }
}


@if (Model.Instructions != null)
{
    if (Model.Instructions.Count > 0)
    {
        <div class="section-title">
            <h3>Instructions List</h3>
            <p></p>
        </div>

        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            @foreach (var instructions in Model.Instructions.OrderBy(i => i.CreatedAt))
            {
                <p class="card-text">@instructions.Step</p>
                <p class="card-text"><small class="text-muted">@instructions.Time</small></p>
            }
        </div>

    }
}



<div>
    <a href="~/manage/cookings/edit/@Model.Id" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
    <a href="~/manage/cookings/index" class="btn btn-danger">Back to List</a>
</div>
